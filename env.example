# Slackin Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Slack Configuration
SLACK_SUBDOMAIN=your-slack-team-name
SLACK_API_TOKEN=xoxp-your-slack-api-token

# Required: Google reCAPTCHA Configuration
GOOGLE_CAPTCHA_SECRET=your-recaptcha-secret-key
GOOGLE_CAPTCHA_SITEKEY=your-recaptcha-site-key

# Optional: Server Configuration
PORT=3000
HOSTNAME=0.0.0.0

# Optional: Slack Channel Restrictions (comma-separated)
# Leave empty to allow all channels
SLACK_CHANNELS=general,random

# Optional: Polling Configuration
SLACK_INTERVAL=5000

# Optional: Email Restrictions (comma-separated)
# Leave empty to allow all emails
EMAIL_SLACK_LIST=user@example.com,admin@example.com

# Optional: Custom Branding
# COC_URL=https://your-site.com/code-of-conduct
# CSS_URL=https://your-site.com/custom.css

# Optional: Development/Debug
NODE_ENV=development
# Set to 'production' for production deployments 